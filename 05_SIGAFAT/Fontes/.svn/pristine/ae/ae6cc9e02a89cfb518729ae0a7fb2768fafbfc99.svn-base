Static Function ReportDef()

Local oReport
Local oVenProd
Local cAliasQry := GetNextAlias()

//Ŀ
//Criacao do componente de impressao                                      
//                                                                        
//TReport():New                                                           
//ExpC1 : Nome do relatorio                                               
//ExpC2 : Titulo                                                          
//ExpC3 : Pergunte                                                        
//ExpB4 : Bloco de codigo que sera executado na confirmacao da impressao  
//ExpC5 : Descricao                                                       
//                                                                        
//
oReport := TReport():New("M05R10","Pedidos X Descontos","M05R10", {|oReport| ReportPrint(oReport,cAliasQry,oVenProd)},"Este relatorio emite a relaao de pedidos de venda " + " " + "que possuem descontos acima de 10%.")
oReport:SetTotalInLine(.F.)

Pergunte(oReport:uParam,.F.)

//Ŀ
//Criacao da secao utilizada pelo relatorio                               
//                                                                        
//TRSection():New                                                         
//ExpO1 : Objeto TReport que a secao pertence                             
//ExpC2 : Descricao da seao                                              
//ExpA3 : Array com as tabelas utilizadas pela secao. A primeira tabela   
//        sera considerada como principal para a seo.                   
//ExpA4 : Array com as Ordens do relatrio                                
//ExpL5 : Carrega campos do SX3 como celulas                              
//        Default : False                                                 
//ExpL6 : Carrega ordens do Sindex                                        
//        Default : False                                                 
//                                                                        
//
//Ŀ
//Criacao da celulas da secao do relatorio                                
//                                                                        
//TRCell():New                                                            
//ExpO1 : Objeto TSection que a secao pertence                            
//ExpC2 : Nome da celula do relatrio. O SX3 ser consultado              
//ExpC3 : Nome da tabela de referencia da celula                          
//ExpC4 : Titulo da celula                                                
//        Default : X3Titulo()                                            
//ExpC5 : Picture                                                         
//        Default : X3_PICTURE                                            
//ExpC6 : Tamanho                                                         
//        Default : X3_TAMANHO                                            
//ExpL7 : Informe se o tamanho esta em pixel                              
//        Default : False                                                 
//ExpB8 : Bloco de cdigo para impressao.                                 
//        Default : ExpC2                                                 
//                                                                        
//
oVenProd := TRSection():New(oReport,"PEDIDOS X DESCONTOS",{"SC5","SB1"},/*{Array com as ordens do relatrio}*/,/*Campos do SX3*/,/*Campos do SIX*/)		// "Relacao de Pedidos por Produto"
oVenProd:SetTotalInLine(.F.) 

//Ŀ
//Define celulas da secao                                                 
//
TRCell():New(oVenProd,"NUM"			,/*Tabela*/	,"Pedido"	 		 ,PesqPict("SC5","C5_NUM")		,TamSx3("C5_NUM")[1]		,/*lPixel*/,{|| cNum	})		// Numero do Pedido
TRCell():New(oVenProd,"VALOR"		,/*Tabela*/ ,"Valor"			 ,PesqPict("SC5","C5_XVLINST")	,TamSx3("C5_XVLINST")[1]	,/*lPixel*/,{|| nValor	})		// Valor do Pedido
TRCell():New(oVenProd,"DESCONTO1"	,/*Tabela*/ ,"% Desconto"		 ,PesqPict("SC5","C5_DESC1")	,TamSx3("C5_DESC1")[1]		,/*lPixel*/,{|| nDesc1	})		// % de desconto 1
TRCell():New(oVenProd,"CLIENTE"		,/*Tabela*/	,"Cliente"			 ,PesqPict("SA1","A1_NOME")		,TamSx3("A1_NOME")[1]		,/*lPixel*/,{|| cNomCli	})		// Nome do Cliente
TRCell():New(oVenProd,"APROVADOR"	,/*Tabela*/ ,"Aprovador"		 ,PesqPict("SA1","A1_NREDUZ")	,TamSx3("A1_NREDUZ")[1]		,/*lPixel*/,{|| cAprov	})		// Aprovador
TRCell():New(oVenProd,"VENDEDOR1"	,/*Tabela*/ ,"Vendedor 1"		 ,PesqPict("SC5","C5_XVEND1")	,TamSx3("C5_XVEND1")[1]		,/*lPixel*/,{|| cXVend1	})		// Nome do vendedor 1
TRCell():New(oVenProd,"COMISSAO1"	,/*Tabela*/ ,"%Comisso 1"		 ,PesqPict("SC5","C5_COMIS1")	,TamSx3("C5_COMIS1")[1]		,/*lPixel*/,{|| cComis1 })		// % de comisso do vendedor 1
TRCell():New(oVenProd,"VENDEDOR2"	,/*Tabela*/ ,"Vendedor 2"		 ,PesqPict("SC5","C5_XVEND1")	,TamSx3("C5_XVEND1")[1]		,/*lPixel*/,{|| cXVend2	})		// Nome do vendedor 1
TRCell():New(oVenProd,"COMISSAO2"	,/*Tabela*/ ,"%Comisso 2"		 ,PesqPict("SC5","C5_COMIS2")	,TamSx3("C5_COMIS2")[1]		,/*lPixel*/,{|| cComis2 })		// % de comisso do vendedor 1
TRCell():New(oVenProd,"DATA"		,/*Tabebla*/,"Data"				 ,PesqPict("SC5","C5_XDTAPRV")	,TamSx3("C5_XDTAPRV")[1]	,/*lPixel*/,{|| dDatApr })		// Data da aprovao
TRCell():New(oVenProd,"HORA"		,/*Tabela*/ ,"Hora"				 ,PesqPict("SC5","C5_XHRAPRV")	,TamSx3("C5_XHRAPRV")[1]	,/*lPixel*/,{|| cHraApr })		// Hora da aprovao

Return(oReport)

